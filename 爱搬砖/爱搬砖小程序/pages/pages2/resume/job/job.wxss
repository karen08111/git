/* pages/pages2/resume/job/job.wxss */
page{
  border-top: 1rpx solid #e5e5e5;
}
.main{
  padding: 30rpx;
  box-sizing: border-box;
}
.forms{
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 6rpx 15rpx 0rpx 
		rgba(44, 133, 255, 0.15);
	border-radius: 20rpx;
}
.li{
  height: 130rpx;
  border-bottom: 1rpx dashed #e5e5e5;
  line-height: 130rpx;
  font-size: 30rpx;
  color: #555555;
  position: relative;
}
.border{
  border-bottom: none;
}
.li input{
  height: 100%;
  font-size: 30rpx;
}
.title{
  float: left;
  margin-right: 25rpx;
  letter-spacing: 2rpx;
}
.titles{
  margin-right: 25rpx;
  letter-spacing: 2rpx;
}
.claer{
  clear: both;
}
.text{
  font-size: 30rpx;
  color: #555555;
  box-sizing: border-box;
  margin-top: 45rpx;
}
.text textarea{
  border: 1rpx solid #e5e5e5;
  width:100%;
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-top: 40rpx;
  
}

