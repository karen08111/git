/* pages/pages2/myTeam/recruitment/recruitment.wxss */
.main{
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.scrolls{
	width: 100%;
	overflow: hidden;
}
.li{
	width: 100%;
  height: 210rpx;
  background: #ffffff;
  margin-bottom: 15rpx;
  padding: 30rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  position: relative;
  left: 0;
	transition: all .3s linear;
}
.icon{
  letter-spacing: 2rpx;
	color: #999999;
  font-size: 22rpx;
}
.title{
  letter-spacing: 3rpx;
	color: #333333;
  font-size: 28rpx;
}
.border-right{
  border-right: 1rpx solid #999999;
  padding-right: 10rpx;
}
.padding-right{
  padding-left: 10rpx;
}
.niu{
	display: inline-block;
	width: 100%;
}
.lan{
  font-size: 20rpx;
  color: #cccccc;
}
.left{
  float: left;
	/* padding: 30rpx; */
	box-sizing: border-box;
}
.right{
  float: right;
}
.zi{
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 3rpx;
	color: #ff7856;
	margin-top: 30rpx;
	margin-right: 30rpx;
}
.times{
  margin-right: 15rpx;
}
.manu{
  display: flex;
  position: absolute;
  top: 0;
  left: 100%;
	float: right;
  z-index: 9;
  height: 100%;
  width: 330rpx;
  text-align: center;
  line-height: 212rpx;
  font-size: 28rpx;
  color: #ffffff;
  letter-spacing: 5rpx;
}
.manu text{
  width: 110rpx;
  display: block;
}
.yin{
  background-color: #f09938;
}
.bian{
  background-color: #ed752e;
}
.del{
  background-color: #ea4e3d;
}
.opacity{
  opacity: 0.5;
}



