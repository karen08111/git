/* pages/pages2/account/book/book.wxss */
.main{
  padding: 30rpx;
	padding-bottom: 80rpx;
  box-sizing: border-box;
}
.addBook{
  width: 690rpx;
  position: relative;
  background: #ffffff;
  color: #555555;
  letter-spacing: 4rpx;
  font-size: 30rpx;
  box-shadow: 0rpx 6rpx 15rpx 0rpx 
		rgba(44, 133, 255, 0.15);
	border-radius: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
	padding-top: 20rpx;
  box-sizing: border-box;
}
.titlesBook{
	height: 130rpx;
	position: relative;
	background: #ffffff;
	color: #555555;
	letter-spacing: 4rpx;
	font-size: 30rpx;
	border-radius: 20rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	box-sizing: border-box;
	line-height: 130rpx;
	text-align: center;
}
.jiantou{
  position: absolute;
  right: 20rpx;
  top:65rpx;
  width: 20rpx;  
  height: 20rpx;  
  border-left: 1rpx solid #b3b3b3;  
  border-bottom: 1rpx solid #b3b3b3;  
  -webkit-transform: translate(0,-50%) rotate(-135deg);  
  transform: translate(0,-50%) rotate(-135deg);
}

.forms{
  width: 690rpx;
  background: #ffffff;
  color: #555555;
  letter-spacing: 2rpx;
  font-size: 30rpx;
  box-shadow: 0rpx 6rpx 15rpx 0rpx 
		rgba(44, 133, 255, 0.15);
	border-radius: 20rpx;
  padding: 30rpx;
  padding-top: 0;
   box-sizing: border-box;
}
.li{
  height: 130rpx;
  border-bottom: 1rpx dashed #e5e5e5;
  line-height: 130rpx;
  font-size: 30rpx;
  color: #555555;
  position: relative;
}
.li input{
  height: 100%;
  font-size: 30rpx;
}
.title{
  float: left;
  margin-right: 25rpx;
  letter-spacing: 2rpx;
}

.showBook{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}






/* components/uploadImg/uploadImg.wxss */
.img{
  display: flex;
  /* height: 100rpx; */
  margin-bottom: 15rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.titles{
  display: block;
  width: 150rpx;
  font-size: 28rpx;
  line-height: 100rpx;
}
.list{
  display: flex;
  flex-wrap: wrap;
}
.tianjia{
  width: 150rpx;
	height: 150rpx;
	background-color: #ffffff;
	border-radius: 6rpx;
	border: dashed 1rpx #bababa;
  color: #333;
  text-align: center;
  margin-top: 15rpx;
}
.jia{
  font-size: 85rpx;
  display: block;
  height: 150rpx;
  position: relative;
  /* top: -10rpx; */
  font-weight: normal
}
.list{
  width: 550rpx;
}
.imgList{
  width: 150rpx;
  height: 150rpx;
  margin-top: 15rpx;
  margin-right: 15rpx;
}
.imgList image{
  width: 100%;
  height: 100%
}
.tianTitle{
  font-family: PingFangSC-Regular;
	font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 2rpx;
	color: #333333;
}


.book-li{
  width: 330rpx;
  height: 358rpx;
  background-color: #fafafa;
	border-radius: 10rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  position: relative;
}
.book-img{
  width: 310rpx;
  height: 220rpx;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
}
.book-img image{
  width: 100%;
  height: 100%;
}
.book-name{
  font-size: 28rpx;
  letter-spacing: 1rpx;
  color: #343434;
  text-align: center;
  margin-top: 15rpx;
}
.book-icon{
  font-size: 22rpx;
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #ffffff;
	border-radius: 15rpx;
	border: solid 1rpx #f7b336;
  color: #666666;
  letter-spacing: 1rpx;
  margin: auto;
  margin-top: 15rpx;

}
.top{
  margin-top: 150rpx;
}
.shenhe{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: #33333380;
  color: #ffffff;
  line-height: 358rpx;
  text-align: center;
	border-radius: 10rpx;
}
.wai{
  display: block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: #ffffff;
  border-radius: 50%;
  z-index: 7;
  top: 10rpx;
  right: 10rpx;
}
.nei{
  display: block;
  width: 18rpx;
  height: 18rpx;
  background: #999;
  z-index: 9;
  border-radius:50%; 
  margin-top: 6.5rpx;
  margin-left: 6.5rpx;
  opacity: 0.6;
}
.nei-active{
  background: #3388ff;
}

.menuList{
  position: fixed;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #ffffff;
  transition: all .3s linear;
  /* display: flex; */
}
.del{
  display: inline-block;
  float: right;
  background: #ea4e3d;
  color: #ffffff;
  border-radius: 20rpx;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
  letter-spacing: 2rpx;
  font-size: 28rpx;
}