/* pages/pages2/resume/book/book.wxss */
page{
  border-top: 1rpx solid #e5e5e5;
  padding-bottom: 110rpx;
  box-sizing: border-box;
}
.main{
  
  padding: 30rpx;
  
  box-sizing: border-box;
}

.book-list{
  
  background: #ffffff;
  box-sizing: border-box;
  padding: 10rpx;
  box-shadow: 0rpx 6rpx 15rpx 0rpx 
		rgba(44, 133, 255, 0.15);
	border-radius: 20rpx;
}
.liebiao{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.book-li{
  width: 330rpx;
  height: 358rpx;
  background-color: #fafafa;
	border-radius: 10rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  position: relative;
}
.book-img{
  width: 310rpx;
  height: 220rpx;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
}
.book-img image{
  width: 100%;
  height: 100%;
}
.book-name{
  font-size: 28rpx;
  letter-spacing: 1rpx;
  color: #343434;
  text-align: center;
  margin-top: 15rpx;
}
.book-icon{
  font-size: 22rpx;
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #ffffff;
	border-radius: 15rpx;
	border: solid 1rpx #f7b336;
  color: #666666;
  letter-spacing: 1rpx;
  margin: auto;
  margin-top: 15rpx;

}
.top{
  margin-top: 150rpx;
}
.add-name{
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 3rpx;
	color: #bababa;
  margin: auto;
  text-align: center;
}

.wai{
  display: block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: #ffffff;
  border-radius: 50%;
  z-index: 7;
  top: 10rpx;
  right: 10rpx;
}
.nei{
  display: block;
  width: 18rpx;
  height: 18rpx;
  background: #999;
  z-index: 9;
  border-radius:50%; 
  margin-top: 6.5rpx;
  margin-left: 6.5rpx;
  opacity: 0.6;
}
.nei-active{
  background: #3388ff;
}

.shenhe{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: #33333380;
  color: #ffffff;
  line-height: 358rpx;
  text-align: center;
}
.menuList{
  position: fixed;
  bottom: -110rpx;
  left: 0;
  width: 100%;
  height: 110rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background: #ffffff;
  transition: all .3s linear;
  /* display: flex; */
}
.show{
  background: #f09938;
  color: #ffffff;
  display: inline-block;
  border-radius: 20rpx;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
  letter-spacing: 2rpx;
  font-size: 28rpx;
}
.hide{
  background: #ffffff;
  color: #000000;
  display: inline-block;
  border-radius: 20rpx;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
  letter-spacing: 2rpx;
  font-size: 28rpx;
}
.del{
  display: inline-block;
  float: right;
  background: #ea4e3d;
  color: #ffffff;
  border-radius: 20rpx;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
  letter-spacing: 2rpx;
  font-size: 28rpx;
}