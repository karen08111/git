/* pages/pages2/resume/basic/basic.wxss */
@import "/assets/font.wxss";
page{
  border-top: 1rpx solid #e5e5e5;
}
.main{
  
  padding: 30rpx;
  box-sizing: border-box;
}
.forms{
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 6rpx 15rpx 0rpx 
		rgba(44, 133, 255, 0.15);
	border-radius: 20rpx;
}
.li{
  height: 130rpx;
  border-bottom: 1rpx dashed #e5e5e5;
  line-height: 130rpx;
  font-size: 30rpx;
  color: #555555;
  position: relative;
}
.li input{
  height: 100%;
  font-size: 30rpx;
}
.title{
  float: left;
  margin-right: 25rpx;
  letter-spacing: 2rpx;
}
.right{
  float: right;
}
.avatar{
  width: 90rpx;
  height: 90rpx;
  margin-top: 20rpx;
  margin-right: 40rpx;
}
.avatar image{
  width: 100%;
  height: 100%;
	border-radius: 50%;
}
.save{
  width: 580rpx;
	height: 100rpx;
	background-color: #3388ff;
	border-radius: 50rpx;
  line-height: 100rpx;
	opacity: 0.9;
  font-size: 34rpx;
  color: #ffffff;
  letter-spacing: 8rpx;
  text-align: center;
  margin: auto;
  margin-top: 30rpx;
}
.border{
  border-bottom: none;
}
.xiala{
  float: left;
  height: 100%;
}
.times{
  display: inline-block;
  width: 100%;
}
.jiantou{
  position: absolute;
  right: 10rpx;
  top:65rpx;
  width: 20rpx;  
  height: 20rpx;  
  border-left: 1rpx solid #b3b3b3;  
  border-bottom: 1rpx solid #b3b3b3;  
  -webkit-transform: translate(0,-50%) rotate(-135deg);  
  transform: translate(0,-50%) rotate(-135deg);
}


