.member {
	width: 100%;
	background-image: linear-gradient(0deg, 
		#441d8c 0%, 
		#1e2094 100%), 
	linear-gradient(
		#030000, 
		#030000);
	background-blend-mode: normal, 
		normal;
		padding-top: 195rpx;
		box-sizing: border-box;
	position: relative;
}
.toast {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #00000033;
	z-index: 5;
}
.member-main {
	width: 690rpx;
	margin: auto;
	position: relative;
}
.member-top {
	width: 100%;
	height: 73rpx;
}
.member-top image {
	width: 100%;
	height: 100%;
}
.intr {
	width: 639rpx;
	margin: auto;
	background-color: #8054d9;
	box-shadow: inset 0rpx 7rpx 0rpx 0rpx 
		#591194;
	border-radius: 0rpx 0rpx 33rpx 33rpx;
	position: relative;
	top: -30rpx;
	padding: 25rpx;
	padding-top: 35rpx;
	box-sizing: border-box;
}
.intr-top {
	margin: auto;
	display: flex;
	width: 564rpx;
	height: 492rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
	overflow: hidden;
	
}
.intr-bg {
	width: 10rpx;
	height: 100%;
	background-color: #fbdb2a;
}
.intr-content {
	padding: 18rpx;
	box-sizing: border-box;
}
.intr-tops {
	font-size: 18rpx;
	color:#666666 ;
}
.title{
	font-size: 24rpx;
	color: #666666;
	margin-right: 25rpx;
}
.contents {
	font-size: 18rpx;
	color: #999999;
	white-space: pre-wrap;
	line-height: 40rpx;
}
.pick {
	width: 360rpx;
	height: 80rpx;
	background-image: linear-gradient(0deg, 
		#742dde 0%, 
		#aa55f9 100%), 
	linear-gradient(
		#8054d9, 
		#8054d9);
	background-blend-mode: normal, 
		normal;
	box-shadow: 0rpx 7rpx 0rpx 0rpx 
		#2c0573;
	border-radius: 20rpx;
	margin: auto;
	color: #FFFFFF;
	font-family: AdobeHeitiStd-Regular;
	font-size: 43rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 20rpx;
	box-shadow: 0rpx 2rpx 0rpx 0rpx 
		#2c0573;
		text-align: center;
		line-height: 80rpx;
}
.showToast {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	margin: auto;
	width: 617rpx;
	background: #FFFFFF;
	z-index: 9;
	height: 562rpx;
	padding: 25rpx;
	box-sizing: border-box;
}


.radio {
	display: flex;
	margin-bottom: 30rpx;
}
.radio-input {
	width: 270rpx;
	height: 45rpx;
	background-color: #fcfcff;
